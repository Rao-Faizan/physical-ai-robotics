# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Qdrant Cloud Configuration
QDRANT_URL=your-qdrant-cloud-url-here
QDRANT_API_KEY=your-qdrant-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///./hackathon.db

# Security
SECRET_KEY=your-secret-key-here-min-32-chars

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3000/physical-ai-robotics

# RAG System Configuration
# Embedding Provider: "openai" or "huggingface"
EMBEDDING_PROVIDER=huggingface
# Embedding Model (optional, uses defaults if not set)
# OpenAI: text-embedding-3-small (default) or text-embedding-3-large
# HuggingFace: sentence-transformers/all-MiniLM-L6-v2 (default)
EMBEDDING_MODEL=

# Document Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector Store
VECTOR_STORE_DIR=data/vectorstore
